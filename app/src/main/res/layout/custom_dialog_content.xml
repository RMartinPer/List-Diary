<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/custom_buttons"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/custom_info"
        android:orientation="horizontal">

        <Button
            android:id="@+id/custom_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bkgd_custom_button"
            android:text="@string/no"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/custom_divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/custom_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bkgd_custom_button"
            android:text="@string/yes"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>